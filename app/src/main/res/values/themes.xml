<resources xmlns:tools="http://schemas.android.com/tools">

    <!-- Base application theme. -->
    <style name="Theme.PopularShop" parent="Theme.MaterialComponents.DayNight.DarkActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryVariant">@color/colorPrimaryVariant</item>
        <item name="colorOnPrimary">@color/white</item>

        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/teal_200</item>
        <item name="colorSecondaryVariant">@color/teal_700</item>
        <item name="colorOnSecondary">@color/black</item>

        <!-- Status bar color. -->
        <item name="android:statusBarColor" tools:targetApi="l">?attr/colorPrimaryVariant</item>
    </style>

    <!--    Text themes-->
    <style name="TextAppearance.PopularShop.ItemDescription" parent="TextAppearance.MaterialComponents.Body1">
        <item name="android:textSize">@dimen/body_default</item>
        <item name="android:textColor">@color/black</item>
    </style>

    <style name="TextAppearance.PopularShop.ListItemDescription" parent="TextAppearance.PopularShop.ItemDescription">
        <item name="android:maxLines">3</item>
        <item name="android:ellipsize">end</item>
    </style>

    <style name="TextAppearance.PopularShop.Price" parent="TextAppearance.MaterialComponents.Body1">
        <item name="android:textSize">@dimen/body_default</item>
        <item name="android:textColor">@color/black</item>
        <item name="android:textStyle">bold</item>
    </style>

</resources>